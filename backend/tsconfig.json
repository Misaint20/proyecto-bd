{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["**/*.ts", "prisma.config.ts"],
  "exclude": ["node_modules"]
}
